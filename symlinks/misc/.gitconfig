# This is Git's per-user configuration file.
[user]
	name = Ari Porad
	email = ari@ariporad.com
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore_global
[rerere]
	enabled = true
[url "git@github.com:"]
	insteadOf = https://github.com/
[hub]
	protocol = ssh
[alias]
	fixup = commit --amend --no-edit
	unstage = restore --staged
